{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/personal-website-ui/browser",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.kappilgarg.dev/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/serverless"
    }
  ],
  "functions": {
    "api/serverless.mjs": {
      "includeFiles": "dist/personal-website-ui/**"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
